        app:popExitAnim="@anim/fragment_fade_enter"
        app:destination="@id/podcastFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/bibleFragment"
        android:name="com.horizon.horizify.ui.bible.BibleFragment">
        <action
            android:id="@+id/action_bibleFragment_pop"
