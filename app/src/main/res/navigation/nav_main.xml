<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.horizon.horizify.ui.home.HomeFragment">
        <action
            android:id="@+id/action_homeFragment_pop"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <action
        android:id="@+id/action_global_homeFragment"
        app:enterAnim="@anim/fragment_fade_enter"
        app:exitAnim="@anim/fragment_fade_exit"
        app:popEnterAnim="@anim/fragment_fade_exit"
        app:popExitAnim="@anim/fragment_fade_enter"
        app:destination="@id/homeFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/videoFragment"
        android:name="com.horizon.horizify.ui.video.VideoFragment">
