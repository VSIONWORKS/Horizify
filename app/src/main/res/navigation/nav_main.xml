        app:popExitAnim="@anim/fragment_fade_enter"
        app:destination="@id/menuBodyFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.horizon.horizify.ui.calendar.CalendarFragment">
        <action
            android:id="@+id/action_calendarFragment_pop"
            app:popUpTo="@id/calendarFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <action
        android:id="@+id/action_global_calendarFragment"
        app:enterAnim="@anim/slide_in_right"
